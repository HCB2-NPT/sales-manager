<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.handler.HomeDetails">
   <center>
      <AnchorPane style="-fx-background-color: #ffffff;">
         <children>
            <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <top>
                  <Pane BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="_name" layoutX="14.0" layoutY="14.0" text="Name...">
                           <font>
                              <Font size="32.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
               </top>
               <center>
                  <Label fx:id="_desc" text="Description..." BorderPane.alignment="TOP_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="8.0" left="48.0" right="8.0" top="8.0" />
                     </BorderPane.margin>
                  </Label>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <Label fx:id="_addr" text="Address..." BorderPane.alignment="TOP_LEFT">
         <font>
            <Font size="16.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
      </Label>
   </bottom>
</BorderPane>
