<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <TableView maxHeight="1.7976931348623157E308" prefHeight="300.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn text="Name" />
            <TableColumn prefWidth="75.0" text="Number" />
            <TableColumn prefWidth="75.0" text="Sell Price" />
            <TableColumn prefWidth="75.0" text="Warranty" />
            <TableColumn prefWidth="75.0" text="Delete" />
         </columns>
      </TableView>
   </bottom>
   <center>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <JFXTextField maxWidth="1.7976931348623157E308" promptText="Name Item" />
            <JFXButton buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #3498db; -fx-background-radius: 45;" GridPane.columnIndex="1">
